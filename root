  <script>
    const projects = {
      logistics: {
        title: 'Logistics Mobile App',
        body: '<p>Built with Ionic + Angular. Features: real-time package tracking, driver assignment, push notifications, and proof-of-delivery capture.</p><p class="meta">My role: frontend development, maps integration, and push notification flow.</p>'
      },
      wallet: {
        title: 'Multi-Feature Wallet (Flutter)',
        body: '<p>Flutter app with payments, billers integration, transaction history, and secure PIN flows.</p><p class="meta">My role: feature implementation, state management, and performance tuning.</p>'
      },
      admin: {
        title: 'Admin Dashboard',
        body: '<p>Angular admin panel with reports, user management, and analytics charts.</p><p class="meta">My role: UI components, API integration, and access control.</p>'
      }
    }

    function openProject(id){
      const p = projects[id];
      const modal = document.getElementById('modal');
      document.getElementById('modal-content').innerHTML = '<h3>'+p.title+'</h3>'+p.body;
      modal.classList.add('open');
    }
    function closeModal(e){
      if(e.target.id === 'modal' || e.target.innerText === 'Close'){
        document.getElementById('modal').classList.remove('open');
      }
    }

    function sendMessage(e){
      e.preventDefault();
      const n = document.getElementById('name').value || 'Anonymous';
      alert('Thanks '+n+" — this form is a demo. Replace with your email endpoint or Formspree/Netlify forms to receive messages.");
      document.getElementById('name').value = '';
      document.getElementById('email').value = '';
      document.getElementById('message').value = '';
    }
  </script>
